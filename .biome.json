{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"files": {
		"ignore": ["node_modules/**", "dist/**", "build/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"quoteStyle": "double",
		"trailingComma": "es5",
		"semicolons": "always"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": true,
			"style": {
				"useCamelCase": "error",
				"noUselessElse": "error",
				"noDuplicateCase": "error"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"maxComplexity": 12
				}
			}
		}
	}
}
