{
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true,
    "[typescript]": {
      "editor.defaultFormatter": "biomejs.biome",
      "editor.formatOnSave": true
    },
    "[javascript]": {
      "editor.defaultFormatter": "biomejs.biome",
      "editor.formatOnSave": true
    },

    // Anidar archivos en el explorador
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
      "package.json": "package-lock.json, pnpm-lock.yaml",
      "tsconfig.json": "tsconfig.*.json",
      ".env": ".env.*",
      "README.md": "README.*",
      ".gitignore": ".gitattributes",
      "biome.json": ".biome.*.json"
    },

    // Mostrar la ruta completa del archivo en la barra de título
    "window.title": "${activeEditorMedium}${separator}${rootName}",

    // Autoimportar limpio en TS (trae siempre el import mas corto)
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifierEnding": "minimal",

    // Muestra los  espacios, tabulaciones y saltos de línea
    "editor.renderWhitespace": "all",

    // Guardado automático
    "files.autoSave": "onWindowChange",

    // Organizar imports al guardar
    "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  }
  }
  